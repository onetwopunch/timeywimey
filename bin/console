#!/bin/sh
# Run a Ruby REPL.
 
set -e
 
cd $(dirname "$0")/..
PRY_PATH=$(which pry)
 
if [ -x $PRY_PATH ] 
then
  exec bundle exec ruby $PRY_PATH -Ilib -r timeywimey -r timeywimey/console
else
  red='\033[0;31m'
  NC='\033[0m'
  echo "${red}Pry was not found or not executable. Make sure \`which pry\` returns an executable.${NC}"
 
fi
